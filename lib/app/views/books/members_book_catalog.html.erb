<p id="notice"><%= notice %></p>

<h1>Books Catalog</h1>

<table class="tables">
  <thead>
  <tr>
    <th colspan="3"> Books</th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
      <tr>
        <td> <%= book.name %> </td>
        <td><%= link_to 'View Details', book %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Search', controller: 'books', action: 'search_form' %>
<br>
<%= button_to 'Suggest a new book', controller: 'books', action: 'suggest_new_book_form' %>

